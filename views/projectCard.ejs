<div class="card my-card mb-3">
  <div class="project-card-image-wrapper mx-auto">
    <img src="<%= image %>"
    class="card-img-top img-fluid mx-auto d-block project-img" alt="An image of the <%= name %> project">
  </div>
  <div class="card-body">
    <div class="d-flex flex-column flex-lg-row align-items-center justify-content-between">
      <h5 class="card-title mb-2 mb-md-2 text-center text-md-start flex-grow-1"><%= name %></h5>
      <!-- <a href="/project/<%= ident %>" class="btn btn-primary">View Project</a> -->
      <a href="<%= link %>" class="project-link btn btn-primary">View Project</a>
    </div>
  </div>
</div>

